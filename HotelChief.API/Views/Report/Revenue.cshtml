@model HotelChief.Core.DTO.RevenueReportDto
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<HotelChief.API.SharedResource> SharedLocalizer

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Revenue Report</title>
</head>
<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">@SharedLocalizer["Revenue_Report"]</h2>
                        <form asp-action="GenerateRevenueReport" method="post">
                            <div class="form-group">
                                <label for="startDate">@SharedLocalizer["Start_Date"]</label>
                                <input type="date" name="startDate" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label for="endDate">@SharedLocalizer["End_Date"]</label>
                                <input type="date" name="endDate" class="form-control" required />
                            </div>
                            <button type="submit" class="btn btn-primary">@SharedLocalizer["Generate_Report"]</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
<div class="warning">
    @TempData["Error_Message"]
</div>
@if (@Model != null)
{
            <p>Total revenue: @Model.TotalRevenue.ToString("F2")</p>
            <p>Hotel service orders count: @Model.HotelServiceOrdersCount</p>
            <p>Reservations count: @Model.ReservationsCount</p>
}